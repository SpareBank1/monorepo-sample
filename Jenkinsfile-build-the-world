pipeline {
   agent {
        docker {
            image 'docker.io/library/maven:3.6.1-jdk-8'
            args '-v /var/jenkins_home/workspace/test:/opt/maven -w /opt/maven'
        }
    }

    stages {
        stage('Build the world') {
            steps {
                sh 'mvn -version'
                sh 'mvn clean install'
            }
        }

    }
}
